<LoginScreen>:
    MDBoxLayout:
        orientation: "vertical"
        spacing: "20dp"
        padding: "40dp"
        MDLabel:
            text: "Iniciar sesión"
            halign: "center"
            font_style: "H4"
        MDTextField:
            id: username
            hint_text: "Usuario"
        MDTextField:
            id: password
            hint_text: "Contraseña"
            password: True
        MDLabel:
            id: msg
            text: ""
            halign: "center"
            theme_text_color: "Error"
        MDRaisedButton:
            text: "Entrar"
            pos_hint: {"center_x": 0.5}
            on_release: root.login()
        MDTextButton:
            text: "¿No tienes cuenta? Regístrate"
            pos_hint: {"center_x": 0.5}
            on_release: app.root.current = "signup"
